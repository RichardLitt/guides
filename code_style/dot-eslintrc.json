{
  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb/base",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true,
      "destructuring": true,
      "spread": true,
      "arrowFunctions": true,
      "blockBindings": true
    }
  },
  "rules": {
    "semi": 2,
    "no-console": 1,
    "no-undef": 0,
    "comma-dangle": 0,
    "quotes": [
        2, "double", { "avoidEscape": true, "allowTemplateLiterals": true}
      ],
    "react/no-danger": 1,
    "react/jsx-no-undef": 0,
    "react/react-in-jsx-scope": 0,
    "meteor/eventmap-params": [
        2, { "templateInstanceParamName": "instance" }
      ],
    "import/no-unresolved": [
        2, { "ignore": ["^meteor/"] }
      ]
  }
}
